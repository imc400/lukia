# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/lukia"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenAI para análisis de IA
OPENAI_API_KEY="sk-..."

# Proxies Premium (Opcionales pero recomendados para producción)
# Bright Data
BRIGHT_DATA_PROXY_HOST="brd-customer-hl_12345678-zone-datacenter_proxy1.zproxy.lum-cdn.com"
BRIGHT_DATA_PROXY_PORT="22225"
BRIGHT_DATA_USERNAME="brd-customer-hl_12345678-zone-datacenter_proxy1"
BRIGHT_DATA_PASSWORD="your_password"

# Oxylabs
OXYLABS_PROXY_HOST="pr.oxylabs.io"
OXYLABS_PROXY_PORT="8001"
OXYLABS_USERNAME="customer-username"
OXYLABS_PASSWORD="your_password"

# ScraperAPI (Alternativa)
SCRAPER_API_KEY="your_scraper_api_key"

# Configuración de scraping
SCRAPING_MODE="production"  # "demo" o "production"
MAX_CONCURRENT_REQUESTS="5"
REQUEST_DELAY_MS="2000"
PROXY_ROTATION_INTERVAL_MS="300000"  # 5 minutos

# Configuración de monitoreo
ENABLE_SCRAPING_METRICS="true"
METRICS_RETENTION_DAYS="30"

# Configuración de rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="30"
RATE_LIMIT_REQUESTS_PER_HOUR="500"

# Configuración de cache
CACHE_TTL_SECONDS="1800"  # 30 minutos
CACHE_MAX_MEMORY_MB="512"

# Configuración de logging
LOG_LEVEL="info"  # "debug", "info", "warn", "error"
LOG_SCRAPING_DETAILS="true"

# Configuración de APIs externas (para futuras integraciones)
SCRAPELESS_API_KEY="your_scrapeless_api_key"
CRAWLBASE_API_KEY="your_crawlbase_api_key"
PILOTERR_API_KEY="your_piloterr_api_key"